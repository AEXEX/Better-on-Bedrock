{
	"format_version": "1.20.80",
	"minecraft:block": {
		"description": {
			"identifier": "better_on_bedrock:voiding_door_bottom",
			"menu_category": {
				"is_hidden_in_commands": false,
				"category": "none"
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": [
						"minecraft:cardinal_direction"
					]
				}
			},
			"states": {
				"pog:custom_door": [
					"default",
					"top_bit"
				],
				"pog:redstone_powered": [
					false,
					true
				],
				"test:door_open": [
					false,
					true
				],
				"test:mirrored": [
					false,
					true
				]
			}
		},
		"components": {
			"minecraft:custom_components": [
				"pog:custom_door"
			],
			"minecraft:collision_box": {
				"origin": [
					-8,
					0,
					-8
				],
				"size": [
					16,
					16,
					3
				]
			},
			"tag:wood": {},
			"minecraft:placement_filter": {
				"conditions": [
					{
						"allowed_faces": [
							"up"
						]
					}
				]
			},
			"minecraft:tick": {
				"interval_range": [
					1,
					2
				]
			},
			"minecraft:loot": "loot_tables/empty.json",
			"minecraft:selection_box": {
				"origin": [
					-8,
					0,
					-8
				],
				"size": [
					16,
					16,
					3
				]
			},
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 0.4
			},
			"minecraft:destructible_by_explosion": {
				"explosion_resistance": 15
			},
			"minecraft:flammable": {
				"destroy_chance_modifier": 20,
				"catch_chance_modifier": 5
			},
			"minecraft:geometry": {
				"identifier": "geometry.chorus_door",
				// Conditionally display plants in their pots
				"bone_visibility": {
					"door_open": "q.block_state('test:door_open') && !q.block_state('test:mirrored')",
					"door_closed": "!q.block_state('test:door_open') && !q.block_state('test:mirrored')",
					"door_open_mirror": "q.block_state('test:mirrored') && q.block_state('test:door_open')",
					"door_closed_mirror": "q.block_state('test:mirrored') && !q.block_state('test:door_open')"
				}
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "voiding_door",
					"render_method": "blend"
				}
			},
			"minecraft:map_color": "#5f4a2b"
		},
		"permutations": [
			{
				"condition": "q.block_state('pog:custom_door') == 'top_bit'",
				"components": {
					"minecraft:loot": "loot_tables/blocks/tall_chorus_grass.item.loottable.json",
					"minecraft:material_instances": {
						"*": {
							"texture": "voiding_door_open",
							"render_method": "alpha_test",
							"face_dimming": false,
							"ambient_occlusion": false
						}
					}
				}
			},
			{
				"condition": "q.block_state('test:door_open')",
				"components": {
					"minecraft:collision_box": {
						"origin": [
							-8,
							0,
							-8
						],
						"size": [
							3,
							16,
							16
						]
					},
					"minecraft:selection_box": {
						"origin": [
							-8,
							0,
							-8
						],
						"size": [
							3,
							16,
							16
						]
					}
				}
			},
			{
				"condition": "q.block_state('test:mirrored') && q.block_state('test:door_open')",
				"components": {
					"minecraft:collision_box": {
						"origin": [
							5,
							0,
							-8
						],
						"size": [
							3,
							16,
							16
						]
					},
					"minecraft:selection_box": {
						"origin": [
							5,
							0,
							-8
						],
						"size": [
							3,
							16,
							16
						]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'north' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							180,
							0
						]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'south' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							0,
							0
						]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'east' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							90,
							0
						]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'west' ",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							270,
							0
						]
					}
				}
			}
		]
	}
